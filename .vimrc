" Gutter
:set number
:set relativenumber

" Searching
:set hlsearch
:set incsearch

" History
:set history=1000
:set undolevels=1000

" Show whitespace
:set list
:set listchars=tab:>.,trail:.,extends:#,nbsp:.

" Tabs and whitespace
:set shiftwidth=2
:set expandtab
:set tabstop=2
:set autoindent

" Other options
:set mouse=a


" Themes and Highlighting
:highlight LineNr ctermfg=darkgrey

:colorscheme slate
:syntax on
